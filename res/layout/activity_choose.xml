<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="horizontal" >


	<fragment
	    android:id="@+id/StorageChooserFragment"
	    android:name="com.rosyhat9.filestoragechooser.ui.StorageChooserFragment"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_gravity="left"
	    android:layout_weight="2" />
	
	<fragment
	    android:id="@+id/FileChooserFragment"
	    android:name="com.rosyhat9.filestoragechooser.ui.FileChooserFragment"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_gravity="right"
	    android:layout_weight="1" />

</LinearLayout>